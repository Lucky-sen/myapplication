<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/iv_good"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_toRightOf="@+id/checkbox"
        />
    <TextView
        android:id="@+id/tv_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="某某某寂寞奇偶奇偶奇偶偶奇偶奇偶就商品"
        android:layout_toRightOf="@+id/iv_good"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/iv_good"
        />
    <TextView
        android:id="@+id/tv_good_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于这个商品的说明"
        android:layout_toRightOf="@+id/iv_good"
        android:layout_alignBottom="@+id/iv_good"
        />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sum_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_top"
        android:textColor="@color/red"
        android:text="价格"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>